extends ../layout.jade

block body
  div.container
    img.logo.center(src='/images/logo-cat.png')

    div.catch-phrase
      p Login to Meow.DJ

    ul.common-providers.soc
      li
        a.soc-twitter(href='login/twitter')
      li
        a.soc-facebook(href='login/facebook')
      li
        a.soc-google(href='login/google')
      li
        a.soc-email1.soc-icon-last#login-email(href='#')

    div.email-provider
      p.title Login
      form(action='login/local', method='post')
        input.form-input(type='text', name='email-address', placeholder='Email address')
        input.form-input(type='password', name='password', placeholder='Password')
        input.button(type='submit', value='Login')

      p.title Register
      form(action='login/local/register', method='post')
        input.form-input(type='text', name='username', placeholder='Username')
        input.form-input(type='text', name='email-address', placeholder='Email address')
        input.form-input(type='password', name='password', placeholder='Password')
        input.button(type='submit', value='Register')

    p.more-providers-caption
      span.triangle
      |Show more
      span.triangle.last

    ul.more-providers.soc
      li
        a.soc-steam(href='login/steam')
      li
        a.soc-github(href='login/github')
